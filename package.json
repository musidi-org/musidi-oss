{
  "name": "root",
  "private": "true",
  "packageManager": "pnpm@9.12.3",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "clean": "pnpm -r clean && rimraf node_modules .nx",
    "graph": "nx graph",
    "format": "pnpm -r format",
    "build": "nx affected -t build",
    "test": "nx affected -t test:type test:lint test:unit",
    "test:type": "nx affected -t test:type",
    "test:lint": "nx affected -t test:lint",
    "test:unit": "nx affected -t test:unit",
    "knip": "knip",
    "build:all": "nx run-many -t build",
    "test:all": "nx run-many -t test:type test:lint test:unit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.4.1",
    "@types/node": "22.10.0",
    "cz-git": "1.11.0",
    "knip": "5.38.1",
    "nx": "20.1.3",
    "rimraf": "6.0.1",
    "simple-git-hooks": "^2.11.1"
  }
}
